<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Full_Name</fullName>
    <active>true</active>
    <description>[First Name][Space][Last Name][Space][Middle Initial]</description>
    <errorConditionFormula>REGEX( Name , " " )</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>You must enter first name as well as last name</errorMessage>
</ValidationRule>
